%html{ lang:"ja" }
  %head
    %meta{charset: "utf-8"}
    %title= data.page.title
    %meta{name: "description", lang: "ja", content: data.page.description}
    %meta{name: "keywords",    lang: "ja", content: data.page.keywords}
    %meta{name: "copyright",   content: "Copyright © 2016 Yamaguchi Center for Arts and Media, All Rights Reserved."}
    %meta{name: "viewport",    content: "width=660"}

    %meta{property: "og:locale", content: "ja_JP"}
    %meta{property: "og:title", content: data.page.title}
    %meta{property: "og:site_name", content: data.page.title}
    %meta{property: "og:description", content: data.page.description}
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:url", content: "#{host}/dna-of-forests/"}
    %meta{property: "og:image", content: "#{host}/dna-of-forests/img/facebook.png?#{chache_param}"}

    %meta{name: "twitter:site", content: '@ycam_jp'}
    %meta{name: "twitter:title", content: data.page.title}
    %meta{name: "twitter:card", content: 'summary_large_image'}
    %meta{name: "twitter:url", content: "#{host}/dna-of-forests/"}
    %meta{name: "twitter:description", content: data.page.description}
    %meta{name: "twitter:image", content: "#{host}/dna-of-forests/img/facebook.png?#{chache_param}"}

    = stylesheet_link_tag "lib/slick/slick.css"
    = stylesheet_link_tag "lib/slick/slick-theme.css"
    = stylesheet_link_tag "style/main.css"
    - if data.page.styles
      - data.page.styles.each do |file|
        = stylesheet_link_tag "#{file}"

    = javascript_include_tag "lib/jquery-3.0.0.min"
    = javascript_include_tag "lib/jquery.easing.1.3"
    = javascript_include_tag "lib/jquery.cookie.js"
    = javascript_include_tag "lib/slick/slick.min"
    - if data.page.scripts
      - data.page.scripts.each do |file|
        = javascript_include_tag "#{file}"

    = partial 'google_analytics'

  %body{ class:"#{page_classes}" }
    = partial 'facebook_like_button'
    = yield